{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"lib": ["es2021"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist",
		"moduleResolution": "node"
	},
	"exclude": [
		"coverage",
		"node_modules",
		"dist"
	]
}